extends layout

block header
    .logo
        a(href="/showroom")
            img(src="/assets/Logos/EuskalBeer_Logo-1-500.png", alt="EuskalBeer Logo")
    
    input(type="checkbox" id="menu" hidden)

    label(for="menu")

            i(class="fa-solid fa-bars")

    if session.usuario
        p= "Bienvenido " + session.usuario.id_usuario
        nav
        label(for="menu")
            i(class="fa-solid fa-xmark")

            ul
                li
                    a(href="/showroom") Showroom
                li
                    a(href="/lista") Tu lista
                li
                    a(href="/logout") Logout
    else
        nav
            ul
                li
                    a(href="/") Login



block content
    h1 Elige tus cervezas artesanales de Euskadi preferidas.
    section
        each cerveza in cervezas
            article 
                img(src=`/assets/${cerveza.marca}.jpg`, alt=`${cerveza.marca}`)
                h2= cerveza.nombre_cerveza
                p= cerveza.clase
                p= cerveza.marca
                p= cerveza.origen
                p= cerveza.graduacion
                script(src="../favoritos.js")
                button(type="submit", value="Favoritos", data-id=cerveza.id_cerveza, onclick="agregarAFavoritos(event)") Favoritos
                    
